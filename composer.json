{
    "version": "1.0.0",
    "name": "cat4year/svg-reuser",
    "description": "A tool to collect and reuse SVG as links",
    "license": "MIT",
    "type": "package",
    "keywords": [
        "laravel",
        "php",
        "svg",
        "sprite",
        "optimize svg",
        "optimize code",
        "optimize html"
    ],
    "authors": [
        {
            "name": "cat4year",
            "email": "cat4year@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Cat4year\\SvgReuser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cat4year\\SvgReuser\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.3",
        "ext-dom": "*",
        "ext-libxml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.1",
        "enshrined/svg-sanitize": "^0.18.0",
        "friendsofphp/php-cs-fixer": "^3.68",
        "rhukster/dom-sanitizer": "^1.0"
    },
    "scripts": {
        "fixer": "vendor/bin/php-cs-fixer fix",
        "test": "vendor/bin/phpunit tests"
    }
}
